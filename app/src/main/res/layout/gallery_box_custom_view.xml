<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sorts_mill_goudy"
                android:text="Book Name / ID"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/ivImagenLibro"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@color/colorPrimary"
                tools:srcCompat="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:srcCompat="@drawable/botonovalo" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:srcCompat="@drawable/botonovalo" />

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                app:srcCompat="@drawable/botonovalo" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>